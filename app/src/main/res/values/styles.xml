<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogShapeAppearance</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Menu">
        <item name="android:gravity">start|center</item>
        <item name="android:drawablePadding">16dp</item>
        <!--<item name="iconGravity">start</item>-->
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:background">@drawable/bg_button_menu</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@null</item>
        <item name="android:layout_marginBottom">@null</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_nm</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EditText.Clickable">
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditText.MultiLine">
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:lines">8</item>
        <item name="android:maxLines">8</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">top|start</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
    </style>

    <style name="FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="fabSize">normal</item>
        <item name="elevation">3dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ImageView">
        <item name="android:src">@drawable/ic_no_pic</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageView.Profile">
        <item name="android:src">@drawable/ic_no_profile_pic</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Spinner">
        <item name="android:minHeight">48dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
    </style>
</resources>