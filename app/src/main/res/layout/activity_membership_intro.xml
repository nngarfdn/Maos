<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    style="@style/ScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".membership.view.MembershipIntroActivity"
    android:orientation="vertical"
    android:padding="24dp"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_header_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ayo_jadi_member"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="@dimen/font_lg"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/img_illustration_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_member_registration"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_header_mi"
            android:layout_above="@+id/layout_about_mi"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/layout_about_mi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/btn_register_mi"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tentang"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/font_md"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/member_merupakan_layanan_untuk_mendapatkan_akses_lebih_saat_melakukan_peminjaman_kepada_penyedia_buku"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keuntungan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/font_md"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dengan_menjadi_member_kamu_bisa_mendapatkan_beberapa_keuntungan_sesuai_dengan_ketentuan_penyedia_buku_seperti_melakukan_peminjaman_dengan_waktu_yang_lebih_lama_ataupun_melakukan_peminjaman_untuk_lebih_dari_1_buku"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register_mi"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daftar_sekarang"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</ScrollView>