<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".subscribe.MembershipRegistrationActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berlangganan 1 Bulan"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mitra_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mitra_logo_mr"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_no_profile_pic"/>

            <TextView
                android:id="@+id/tv_mitra_name_mr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama mitra"/>

            <TextView
                android:id="@+id/tv_mitra_address_mr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat mitra"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edt_name_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama lengkap"
        android:inputType="textPersonName|textCapWords"/>

    <EditText
        android:id="@+id/edt_email_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="none"
        android:editable="false"/>

    <EditText
        android:id="@+id/edt_address_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat lengkap"
        android:inputType="none"
        android:editable="false"/>

    <TextView
        android:id="@+id/tv_address_mr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganti alamat"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/btn_submit_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajukan Pendaftaran"/>
</LinearLayout>