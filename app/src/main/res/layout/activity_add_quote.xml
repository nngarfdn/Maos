<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".catatanku.quotes.AddQuoteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:title="Tambah Quote" />

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photoEditorView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        />

    <ImageView
        android:id="@+id/imgUndo"
        android:layout_below="@+id/photoEditorView"
        android:layout_width="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_undo_24"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/imgRedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/photoEditorView"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/imgUndo"
        android:src="@drawable/ic_baseline_redo_24" />


    <ImageView
        android:id="@+id/imgShare"
        android:layout_below="@+id/photoEditorView"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_baseline_share_24"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Quote"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/imgRedo"/>

    <EditText
        android:id="@+id/edt_quote"
        style="@style/EditText.MultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:focusable="false"
        android:layout_below="@id/quote"
        android:hint="Quote Favorite"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/btn_simpan_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Simpan"
        style="@style/Button.Primary"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/edt_quote"/>
</RelativeLayout>