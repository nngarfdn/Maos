<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.user.UpdateUserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo_uup"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_no_profile_pic"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btn_photo_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti foto profil"/>

        <EditText
            android:id="@+id/edt_name_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama lengkap"
            android:inputType="textCapWords|textPersonName"/>

        <EditText
            android:id="@+id/edt_address_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:inputType="textCapWords"/>

        <Spinner
            android:id="@+id/sp_provinces_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:spinnerMode="dialog"/>

        <Spinner
            android:id="@+id/sp_regencies_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:spinnerMode="dialog"/>

        <Spinner
            android:id="@+id/sp_districts_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:spinnerMode="dialog"/>

        <ImageView
            android:id="@+id/img_id_card_uup"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:src="@color/gray"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btn_id_card_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti foto identitas"/>

        <Button
            android:id="@+id/btn_save_uup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"/>
    </LinearLayout>
</ScrollView>